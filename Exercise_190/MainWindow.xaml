<Window x:Class="Exercise_190.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise_190"
        mc:Ignorable="d"
        Title="MainWindow" Height="587" Width="533" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Linien" Margin="10,13,0,0" />
            <TextBox x:Name="TextBoxLines" Width="50" Text="2" Margin="10,10,0,0" TextAlignment="Center" />
            <Button Content="Zeichnen" Width="80" Margin="10,10,0,0" Click="ButtonDraw_Click" />
            <Button Content="Zählen" Width="80" Margin="10,10,0,0" Click="ButtoCount_Click" />
        </StackPanel>
        <Canvas x:Name="Canvas" Height="500" Width="500" Background="Black" Margin="10" Grid.Row="1" />
    </Grid>
</Window>